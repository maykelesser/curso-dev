{
    "name": "cursodev",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "engines": {
        "node": ">=20"
    },
    "scripts": {
        "dev": "npm run services:up && npm run services:wait:database && npm run migrations:up && next dev",
        "postdev": "npm run services:stop",
        "test": "npm run services:up && concurrently -n next,jest --hide next -k -s command-jest \"next dev\" \"jest --runInBand --verbose\"",
        "posttest": "npm run services:stop",
        "test:watch": "jest --watchAll --runInBand --verbose",
        "lint:prettier:check": "prettier --check .",
        "lint:prettier:fix": "prettier --write .",
        "lint:eslint:check": "next lint --dir .",
        "services:up": "docker compose -f infra/docker/compose.yaml up -d",
        "services:down": "docker compose -f infra/docker/compose.yaml down",
        "services:stop": "docker compose -f infra/docker/compose.yaml stop",
        "services:wait:database": "node infra/database/wait-for-postgres.js",
        "migrations:create": "node-pg-migrate -m infra/database/migrations create",
        "migrations:up": "node-pg-migrate -m infra/database/migrations --envPath .env.development up",
        "migrations:down": "node-pg-migrate -m infra/database/migrations --envPath .env.development down",
        "prepare": "husky",
        "commit": "cz",
        "secretlint": "npx secretlint \"**/*\""
    },
    "author": "Esser Servi√ßos em Tecnologia LTDA (CNPJ 57.962.671/0001-50)",
    "license": "proprietary",
    "private": true,
    "dependencies": {
        "async-retry": "1.3.3",
        "bcryptjs": "3.0.2",
        "cookie": "1.0.2",
        "dayjs": "1.11.13",
        "dotenv": "16.4.7",
        "dotenv-expand": "12.0.1",
        "next": "15.1.3",
        "next-connect": "1.0.0",
        "node-pg-migrate": "7.8.0",
        "pg": "8.13.1",
        "react": "19.0.0",
        "react-dom": "19.0.0",
        "swr": "2.3.0",
        "uuid": "^11.1.0"
    },
    "devDependencies": {
        "@commitlint/cli": "19.6.1",
        "@commitlint/config-conventional": "19.6.0",
        "@faker-js/faker": "9.7.0",
        "@secretlint/secretlint-rule-no-dotenv": "9.0.0",
        "@secretlint/secretlint-rule-preset-recommend": "9.0.0",
        "autoprefixer": "10.4.20",
        "commitizen": "4.3.1",
        "concurrently": "9.1.1",
        "cz-conventional-changelog": "3.3.0",
        "eslint": "9.17.0",
        "eslint-config-next": "15.1.3",
        "eslint-config-prettier": "9.1.0",
        "eslint-plugin-jest": "28.10.0",
        "husky": "9.1.7",
        "jest": "29.7.0",
        "postcss": "8.4.49",
        "prettier": "3.4.2",
        "secretlint": "9.0.0",
        "set-cookie-parser": "2.7.1",
        "tailwindcss": "3.4.17"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
